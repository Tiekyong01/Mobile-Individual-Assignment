<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background01"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="#CC9293df"
            android:fontFamily="@font/shortbaby_mg2w"
            android:gravity="center"
            android:text="Touch \n The Red Circle"
            android:textColor="@android:color/white"
            android:textSize="55sp"
            android:padding="15sp"/>
        <ImageView
            android:layout_width="69dp"
            android:layout_height="66dp"
            android:layout_marginBottom="100dp"
            app:srcCompat="@drawable/star" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="191dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:layout_width="124dp"
            android:layout_height="138dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            app:srcCompat="@drawable/circle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            app:srcCompat="@drawable/star" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="212dp"
        android:background="#999293DF"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#f7ffd7"
            android:fontFamily="@font/roman"
            android:text="Start"
            android:textColor="#9470CE"
            android:textSize="25sp"
            android:onClick="startGame"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f7ffd7"
            android:fontFamily="@font/roman"
            android:text="Quit"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:onClick="quitGame"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="63dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#66B19CD8">


    </RelativeLayout>


</LinearLayout>